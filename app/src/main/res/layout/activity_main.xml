<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextObiettivo"
        android:layout_width="386dp"
        android:layout_height="77dp"
        android:hint="Obiettivo calorico (kcal)"
        android:inputType="number"
        android:textSize="19sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/buttonConfermaObiettivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conferma Obiettivo"
            android:textSize="19sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/buttonCorsa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Corsa"
            android:backgroundTint="@android:color/holo_blue_light"
            android:textColor="@android:color/white"
            android:layout_marginEnd="4dp"
            android:textSize="19sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonCiclismo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ciclismo"
            android:backgroundTint="@android:color/holo_green_light"
            android:textColor="@android:color/white"
            android:layout_marginEnd="4dp"
            android:textSize="19sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonPalestra"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Palestra"
            android:backgroundTint="@android:color/holo_orange_light"
            android:textColor="@android:color/white"
            android:layout_marginEnd="4dp"
            android:textSize="19sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonRiposo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Riposo"
            android:backgroundTint="@android:color/darker_gray"
            android:textColor="@android:color/white"
            android:textSize="19sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <EditText
            android:id="@+id/editTextDurata"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Durata (min)"
            android:inputType="number"
            android:visibility="gone"
            android:layout_marginEnd="8dp"
            android:textSize="19sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextCalorie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Calorie"
            android:inputType="number"
            android:imeOptions="actionDone"
            android:visibility="gone"
            android:textSize="19sp"
            android:textStyle="bold" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/textViewRiepilogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="19sp"
            android:textStyle="bold" />

    </ScrollView>

</LinearLayout>